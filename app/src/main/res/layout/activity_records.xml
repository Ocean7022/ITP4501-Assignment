<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearRecords"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RecordsActivity">

  <Space
      android:id="@+id/spR1"
      android:layout_width="match_parent"
      android:layout_height="38dp" />

  <TextView
      android:id="@+id/tvR"
      android:layout_width="match_parent"
      android:layout_height="69dp"
      android:text="Your Records"
      android:textAlignment="center"
      android:textSize="24sp" />

  <ListView
      android:id="@+id/lvRankingLocal"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <Button
      android:id="@+id/buSort"
      android:layout_width="270dp"
      android:layout_height="80dp"
      android:insetTop="10dp"
      android:insetBottom="10dp"
      android:onClick="fillListView"
      android:text="Sort By Moves"
      android:textSize="20sp" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:src="@drawable/bg_kankore01" />

</LinearLayout>